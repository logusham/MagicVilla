@model IEnumerable<VillaNumberDto>
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col-5">
            <h1 class="text-primary">Villa Number List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="VillaNumber" asp-action="CreateVillaNumber" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Create New Villa Number</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <td>
                    Villa Name
                </td>
                <td>
                    Villa Number
                </td>
                <td>
                </td>
            </tr>
        </thead>
        <tbody>
            @foreach (var temp in Model)
            {
                <tr>
                    <td>
                        @temp.Villa.Name
                    </td>
                    <td>
                        @temp.VillaNo
                    </td>
                    <td>
                        <a asp-controller="VillaNumber" asp-action="UpdateVillaNumber" asp-route-villaNo="@temp.VillaNo" class="btn btn-outline-success"><i class="bi bi-pencil-square"></i></a>
                        <a asp-controller="VillaNumber" asp-action="DeleteVillaNumber" asp-route-villaNo="@temp.VillaNo" class="btn btn-outline-danger"><i class="bi bi-trash-fill"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>